		//고객과 주문 목록을 지정할 ArrayList 고객리스트 주문리스트
		//고객과 피자리스트를 한번에 묶을 ArrayList 생성
		
		ArrayList<String> 주문리스트 = new ArrayList<>();
		ArrayList<String> 고객리스트 = new ArrayList<>(Arrays.asList("고영희", "박철진", "안영식", "고영희", "박철진"));
		ArrayList<String> 피자리스트 = new ArrayList<>(Arrays.asList("페페로니", "마르게리따", "슈프림", "파인애플", "치즈"));

		//HashSet 사용해서 중복 주문 방지하기 위한 set 중복주문방지
		Set<String> 중복주문방지 = new HashSet<>();
		
		
		//PizzaOrder를 사용해서 주문을 추가함
		po.PizzaOrder("고영희", "페페로니");
		
		//toString() - 주문한 내용 전체보기
		
		//중복된 주문 정보 제거한 뒤 출력
	}
}
