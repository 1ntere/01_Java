package гого;
//2439
import java.util.Scanner;

public class Main{
	public static void main(String[] args) {
		Scanner sc = new Scanner(System.in);
		int line = sc.nextInt();
		for (int N = line; N > 0; N--) {
			for (int blank = N-1; blank > 0; blank--) {
				System.out.print(" ");
			}
			for (int star = 1; star <= (line+1-N); star++) {
				System.out.print("*");
			}
			System.out.println("");
		}
	}
}
